<UserControl x:Class="RootCauseExplorer.SPCalendarWeekControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="96" Height="848">
    <Grid x:Name="LayoutRoot">
    	<Grid.Background>
    		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    			<GradientStop Color="#FF56BBE9"/>
    			<GradientStop Color="#FFA1CAE1" Offset="1"/>
    			<GradientStop Color="#FF69D5F0" Offset="0.0"/>
    			<GradientStop Color="#FF5FB2D5" Offset="0.04"/>
    			<GradientStop Color="#FEA1CAE1" Offset="0.2"/>
    			<GradientStop Color="#FF92DAF8" Offset="0.01"/>
    		</LinearGradientBrush>
    	</Grid.Background>
    	<TextBlock Height="14" Margin="0,8,0,0" VerticalAlignment="Top" Text="DAY" TextWrapping="Wrap" HorizontalAlignment="Center" x:Name="DayColumnName" FontFamily="SegoeSB.ttf#Segoe Semibold" Foreground="#FFFFFFFF"/>

    </Grid>
</UserControl>
